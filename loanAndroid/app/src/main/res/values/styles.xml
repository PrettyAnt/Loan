<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_Dark" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorBlack_1</item>
        <item name="colorPrimaryDark">@color/colorBlack_1</item>
        <item name="colorAccent">@color/colorBlack_1</item>
    </style>

    <!-- Loding_dialog样式Start -->
    <style name="Dialog_bocop">
        <item name="android:windowBackground">@color/bocop_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <!-- Loding_dialog样式End -->
    <!--底部popupwindow的弹出样式-->
    <style name="center_popwindow">
        <item name="android:windowEnterAnimation">@anim/klb_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/klb_anim_exit</item>
    </style>
    <style name="DesignTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
<!--        <item name="android:layout_alignParentBottom">true</item>-->
    </style>

    <style name="Theme_Transparent" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
